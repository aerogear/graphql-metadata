{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./types",
    "declaration": true,
    "target": "es2017",
    "module": "commonjs",
    "importHelpers": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": [
      "dom",
      "esnext",
      "es2017",
      "esnext.asynciterable"
    ],
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    // May break autocomplete
    "strictNullChecks": false,
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*.ts",
  ]
}
